{% extends 'base.html.twig' %}

{% block title %}
    {{ 'action_add_answer'|trans({'%id%': question.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'action_add_answer'|trans({'%id%': question.id|default('')}) }}</h1>
    {{ form_start(form, { method: 'POST', action: url('question_answer', {id: question.id}) }) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action.save'|trans }}" class="btn btn-primary" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('question_show', {id: question.id}) }}" class="btn btn-link">
            {{ 'action_back_to_question'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}